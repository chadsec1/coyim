<interface>
  <object class="GtkBox" id="room-config-access-page">
    <property name="orientation">vertical</property>
    <property name="border_width">24</property>
    <child>
      <object class="GtkBox" id="room-config-access-content">
        <property name="visible">True</property>
        <property name="orientation">vertical</property>
        <property name="spacing">24</property>
        <child>
          <object class="GtkLabel">
            <property name="visible">True</property>
            <property name="label" translatable="yes">Here you can manage access to the room. If you specify a password for the room, you should share it in a secure way. This will help to protect the people in the room. Remember that room passwords do not make the room encrypted, so people that control the location of the room might still have access to it, even without providing a password.</property>
            <property name="wrap">True</property>
            <property name="xalign">0</property>
            <property name="yalign">0</property>
            <style>
              <class name="config-field-intro"/>
            </style>
          </object>
          <packing>
            <property name="expand">False</property>
            <property name="fill">True</property>
            <property name="position">0</property>
          </packing>
        </child>
        <child>
          <object class="GtkBox" id="room-config-fields-content">
            <property name="visible">True</property>
            <property name="orientation">vertical</property>
            <property name="spacing">24</property>
          </object>
          <packing>
            <property name="expand">False</property>
            <property name="fill">True</property>
            <property name="position">1</property>
          </packing>
        </child>
      </object>
      <packing>
        <property name="expand">True</property>
        <property name="fill">True</property>
        <property name="position">1</property>
      </packing>
    </child>
  </object>
</interface>
