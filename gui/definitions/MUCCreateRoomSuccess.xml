<interface>
  <object class="GtkBox" id="createRoomSuccess">
    <property name="height_request">300</property>
    <property name="valign">center</property>
    <property name="hexpand">True</property>
    <property name="vexpand">True</property>
    <property name="orientation">vertical</property>
    <child>
      <object class="GtkBox" id="createRoomSuccessContent">
        <property name="halign">center</property>
        <property name="valign">center</property>
        <property name="hexpand">True</property>
        <property name="vexpand">True</property>
        <property name="orientation">vertical</property>
        <property name="spacing">20</property>
        <child>
          <object class="GtkImage" id="createRoomSuccessImage">
            <property name="pixel_size">60</property>
            <property name="icon_name">dialog-ok</property>
            <property name="use_fallback">True</property>
            <property name="icon_size">3</property>
          </object>
          <packing>
            <property name="expand">False</property>
            <property name="fill">True</property>
            <property name="position">0</property>
          </packing>
        </child>
        <child>
          <object class="GtkLabel" id="createRoomSuccessMessage">
            <property name="label" translatable="yes">Congratulations, the room has been created</property>
          </object>
          <packing>
            <property name="expand">False</property>
            <property name="fill">True</property>
            <property name="position">1</property>
          </packing>
        </child>
        <child>
          <object class="GtkButtonBox" id="createRoomSuccessButtons">
            <property name="halign">center</property>
            <property name="spacing">10</property>
            <property name="layout_style">center</property>
            <child>
              <object class="GtkButton" id="createNewRoomButton">
                <property name="label" translatable="yes">Create another room</property>
                <property name="receives_default">True</property>
                <signal name="clicked" handler="on_createRoom_clicked" swapped="no"/>
              </object>
              <packing>
                <property name="expand">True</property>
                <property name="fill">True</property>
                <property name="position">0</property>
              </packing>
            </child>
            <child>
              <object class="GtkButton" id="joinCreatedRoomButton">
                <property name="label" translatable="yes">Join</property>
                <property name="receives_default">True</property>
                <signal name="clicked" handler="on_joinRoom_clicked" swapped="no"/>
              </object>
              <packing>
                <property name="expand">True</property>
                <property name="fill">True</property>
                <property name="position">1</property>
              </packing>
            </child>
          </object>
          <packing>
            <property name="expand">False</property>
            <property name="fill">False</property>
            <property name="position">2</property>
          </packing>
        </child>
      </object>
      <packing>
        <property name="expand">False</property>
        <property name="fill">True</property>
        <property name="position">1</property>
      </packing>
    </child>
  </object>
</interface>